<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.FragmentedPixel.DunceaOprea.carnetvirtualprofesor.MainActivity">

    <Button
        android:text="Mesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/write_message_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAllCaps="false" />

    <Button
        android:text="Catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/catalog_button"
        android:elevation="0dp"
        tools:ignore="HardcodedText,UnusedAttribute"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAllCaps="false" />

    <Button
        android:text="Absente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/presences_button"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAllCaps="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/classes_spinner"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:spinnerMode="dialog"
            android:minWidth="150dp"
            android:minHeight="50dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical" />

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/materii_spinner"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:spinnerMode="dialog"
            android:minWidth="150dp"
            android:minHeight="50dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:text="Nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grades_button"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAllCaps="false" />

</RelativeLayout>
