<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_grades"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.FragmentedPixel.DunceaOprea.carnetvirtualprofesor.GradesActivity">

    <TextView
        android:text="Pune Nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/classHeader_textView"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:text="Trimite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grade_submit_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/students_Spinner"
        android:dropDownWidth="match_parent"
        android:layout_below="@+id/classHeader_textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:max="10"
        android:layout_alignBottom="@+id/nota_TextView"
        android:layout_toRightOf="@+id/nota_TextView"
        android:layout_toEndOf="@+id/nota_TextView" />

    <CheckBox
        android:text="teza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teza_checkBox"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textColor="#ff757575"
        android:layout_below="@+id/seekBar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Data:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_pretext"
        android:textSize="24sp"
        android:layout_below="@+id/students_Spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_textView"
        android:textSize="24sp"
        android:layout_below="@+id/students_Spinner"
        android:layout_toRightOf="@+id/date_pretext"
        android:layout_toEndOf="@+id/date_pretext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nota_TextView"
        android:hint="Nota"
        android:textSize="24sp"
        android:layout_below="@+id/date_pretext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
